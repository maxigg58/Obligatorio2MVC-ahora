<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{
        // 1 es cliente y 0 es empleado el 2 es sin loguearse
        int tipousulogueado = 2;

        if (Session["UsuLogeado"]!=null)
        {
            tipousulogueado = ((int)Session["UsuLogeado"]);
        }
        
        int CantCarrito = 0;
        if (Session["CountElementosCarrito"] != null)
        {
            CantCarrito = ((int)Session["CountElementosCarrito"]);
        }

        string carritoItem = "Ver Carrito (" + CantCarrito.ToString() + ")";

        if (tipousulogueado == 1)
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Nombre de aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>

                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                            <li>@Html.ActionLink("Buscar Producto", "Index", "Productoes")</li>
                            <li>@Html.ActionLink("Ver Compras", "VisualizarPedidos", "Carrito")</li>
                            <li>@Html.ActionLink("Agregar a Carrito", "Create", "Carrito")</li>
                            <li>@Html.ActionLink(carritoItem, "Index", "Carrito")</li>
                            <li>@Html.ActionLink("Cerrar Sesiòn ", "Logout", "Usuarios")</li>

                        </ul>
                    </div>
                </div>
            </div>
        }
        else if(tipousulogueado ==0)
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Nombre de aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>

                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                            <li>@Html.ActionLink("CargarProductos", "CargarProductos", "Home")</li>
                            <li>@Html.ActionLink("Buscar Producto", "Index", "Productoes")</li>
                            <li>@Html.ActionLink("Regitsro Clientes", "Create", "Clientes")</li>
                            <li>@Html.ActionLink("Cerrar Sesiòn ", "Logout", "Usuarios")</li>

                        </ul>
                    </div>
                </div>
            </div>
        }
        else if(tipousulogueado ==2)
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Nombre de aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>

                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                            <li>@Html.ActionLink("Buscar Producto", "Index", "Productoes")</li>
                            <li>@Html.ActionLink("Regitsro Clientes", "Create", "Clientes")</li>
        

                        </ul>
                    </div>
                </div>
            </div>
        }


    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>
</html>
